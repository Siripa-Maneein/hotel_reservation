<!DOCTYPE html>
<html>
    <head>
        <title>Update reservation</title>
        <link rel="stylesheet" href="/stylescheets/formdata.css" type="text/css">
    </head>
    <body>
        <div class="form-input">
            <div class="head">
                <h4> Update reservation_id: <%= idReservation; %></h4>
                <hr>
            </div>
        <form action="/reservation/updatesave" method="POST">
            <div>
                <span></br></span>
                <span>reservation_id : </span>
                <input type="text" name="reservation_id" value="<%= idReservation; %>" readonly />
            </div>
            <div>
                <span>customer_id : </span>
                <input type="text" name="customer_id" value="" />
            </div>
            <div>
                <span>num_guests : </span>
                <input type="text" name="num_guests" value="" />
            </div>
            <div>
                <span>check_in_date : </span>
                <input type="date" name="check_in_date" value="" />
            </div>
            <div>
                <span>check_out_date : </span>
                <input type="date" name="check_out_date" value="" />
            </div>
            <div>
                <span>total_amount : </span>
                <input type="text" name="total_amount" value="" />
            </div>
            <div>
                <span>transaction_datetime : </span>
                <input type="text" name="transaction_datetime" value="" />
            </div>
            <div>
                <span>account_name : </span>
                <input type="text" name="account_name" value="" />
            </div>
            <div>
                <span>payment_status : </span>
                <INPUT TYPE="radio" NAME="payment_status" VALUE="paid">paid
                <INPUT TYPE="radio" NAME="payment_status" VALUE="unpaid">unpaid
            </div>
            <input type="submit" value="submit" id="submit" />
        </form>
        </div>
    </body>
</html>
